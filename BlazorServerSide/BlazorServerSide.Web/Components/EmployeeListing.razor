@inject IEmployeeListingViewModel ViewModel

<h5>Listing</h5>

<table style="width:50%;">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
        <th>Date Created</th>
    </tr>
    @foreach (var employee in ViewModel.Employees)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Department</td>
            <td>@employee.DateCreated.ToShortDateString()</td>
        </tr>
    }
</table>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitialiseViewModel();
    }
}
